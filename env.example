# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=estate_db
DB_USER=estate_user
DB_PASSWORD=admin123

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Elasticsearch Configuration
ELASTICSEARCH_HOSTS=http://elasticsearch:9200
ELASTICSEARCH_INDEX=real_estate_ads
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://api:8000

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_PORT=5050

# Scrapy Pipeline API URL
SCRAPY_API_URL=http://api:8000/api/ads

# Scheduler Service Configuration
PIPELINE_INTERVAL_HOURS=3
RUN_IMMEDIATELY_ON_START=false
SCRAPING_SOURCES=house,lalafo,stroka

# Pipeline Steps Control
ENABLE_SCRAPING=true
ENABLE_PHOTO_PROCESSING=true
ENABLE_DUPLICATE_PROCESSING=true
ENABLE_REALTOR_DETECTION=true
ENABLE_ELASTICSEARCH_REINDEX=true

# Timing Settings
SCRAPING_CHECK_INTERVAL_SECONDS=60
PROCESSING_CHECK_INTERVAL_SECONDS=30
MAX_WAIT_TIME_MINUTES=120

# Proxy Configuration (optional)
USE_PROXY=false
PROXY_URL=

# Elasticsearch Cluster Settings
ES_CLUSTER_NAME=real-estate-cluster
ES_NODE_NAME=real-estate-node
ES_JAVA_OPTS=-Xms512m -Xmx512m

# Docker Ports (for external access)
REDIS_EXTERNAL_PORT=6379
ELASTICSEARCH_EXTERNAL_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300
